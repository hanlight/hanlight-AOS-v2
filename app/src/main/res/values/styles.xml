<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="boldTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="regularTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">#6d6d6d</item>
    </style>

    <style name="errorTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">#ff0000</item>
    </style>

</resources>