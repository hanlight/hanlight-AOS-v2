<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/hanlight_Logo"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="69dp"
        android:layout_marginRight="156dp"
        android:src="@drawable/hanlight_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        style="@style/boldTextStyle"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginLeft="141dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="141dp"
        android:text="회원가입"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hanlight_Logo" />

    <TextView
        android:id="@+id/text2"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="272dp"
        android:autoSizeTextType="uniform"
        android:gravity="left|center"
        android:text="회원가입 키"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keyEdt" />

    <EditText
        android:id="@+id/keyEdt"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/edittext_style"
        android:hint="제공된 핀 번호를 입력해주세요."
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toTopOf="@id/phoneEdt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/text3"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="272dp"
        android:layout_marginBottom="8dp"
        android:autoSizeTextType="uniform"
        android:gravity="left|center"
        android:text="전화번호"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@id/phoneEdt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/phoneEdt"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/edittext_style"
        android:hint="휴대폰 번호를 - 빼고 입력해주세요."
        android:paddingLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@id/authBtn"/>

    <Button
        android:id="@+id/authBtn"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/bold"
        android:text="인증하기"
        android:textColor="#ffffff"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text4"/>

    <TextView
        android:layout_marginTop="313dp"
        android:id="@+id/text4"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="170dp"
        android:gravity="center"
        android:text="전화번호 인증 시 이용 약관과 개인정보처리방침에 동의하게 됩니다."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />


</androidx.constraintlayout.widget.ConstraintLayout>