<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchPasswordActivity">

    <ImageView
        android:id="@+id/hanlightLogo_SearchPassword"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="69dp"
        android:layout_marginRight="156dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/hanlight_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_SearchPassword"
        style="@style/boldTextStyle"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginLeft="141dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="141dp"
        android:text="비밀번호 찾기"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hanlightLogo_SearchPassword" />

    <TextView
        android:id="@+id/text2_SearchPassword"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="아이디"
        app:layout_constraintBottom_toTopOf="@id/idEdt_SearchPassword"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/idEdt_SearchPassword"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_style"
        android:hint="아이디"
        android:inputType="text"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/error_SearchPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/error_SearchPassword"
        style="@style/errorTextStyle"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="11dp"
        android:gravity="center"
        android:text="형식이 잘못되었거나 존재하지 않는 아이디 입니다."
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/text3_SearchPassword"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text3_SearchPassword"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="전화번호"
        app:layout_constraintBottom_toTopOf="@id/passwordEdt_SearchPassword"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/passwordEdt_SearchPassword"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/edittext_style"
        android:hint="휴대폰 번호를 - 빼고 입력해주세요."
        android:inputType="phone"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/error2_SearchPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/error2_SearchPassword"
        style="@style/errorTextStyle"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="전화번호가 올바른 형식이 아닙니다."
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/authBtn_SearchPassword"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/authBtn_SearchPassword"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="194dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/bold"
        android:text="인증하기"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="254dp"
        app:layout_constraintTop_toBottomOf="@+id/text_SearchPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>