<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/backImg_Signup1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintBottom_toTopOf="@id/hanlightLogo_Signup1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/hanlightLogo_Signup1"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="69dp"
        android:layout_marginRight="156dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/hanlight_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_Signup1"
        style="@style/boldTextStyle"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginLeft="141dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="141dp"
        android:text="@string/signup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hanlightLogo_Signup1" />

    <TextView
        android:id="@+id/text2_Signup1"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:text="@string/key"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@id/keyEdt_Signup1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/keyEdt_Signup1"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/edittext_style"
        android:hint="@string/keyHint"
        android:inputType="text"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/error2_Signup1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlSymmetry"
        android:importantForAutofill="no" />


    <TextView
        android:id="@+id/error2_Signup1"
        style="@style/errorTextStyle"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="313dp"
        android:layout_marginBottom="37dp"
        android:gravity="start"
        android:text="@string/signFormError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/phoneEdt_Signup1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text3_Signup1"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:text="@string/phone"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@id/phoneEdt_Signup1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/phoneEdt_Signup1"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/edittext_style"
        android:hint="@string/phoneRule"
        android:inputType="number"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/error1_Signup1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlSymmetry,TextFields"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/error1_Signup1"
        style="@style/errorTextStyle"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="313dp"
        android:layout_marginBottom="25dp"
        android:gravity="start"
        android:text="@string/phoneFormError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/authBtn_Signup1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/authBtn_Signup1"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/bold"
        android:text="@string/auth"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/text4_Signup1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text4_Signup1"
        style="@style/regularTextStyle"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="313dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="170dp"
        android:gravity="start"
        android:text="@string/signupNotice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Signup1" />


</androidx.constraintlayout.widget.ConstraintLayout>